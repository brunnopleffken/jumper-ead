<%= form_for Student.new do |f| %>
<div class="form-group">
  <%= f.label :name, 'Nome do aluno' %>
  <%= f.text_field :name, class: 'form-control', required: true %>
</div>
<div class="form-group">
  <%= f.label :classroom_id, 'Turma' %>
  <%= f.collection_select :classroom_id, Classroom.all, :id, :weekday, {}, { class: 'custom-select' } %>
</div>
<div class="form-group">
  <%= f.submit 'Cadastrar', class: 'btn btn-primary' %>
</div>
<% end %>
